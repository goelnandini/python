# python

def arearectangle(length,breadth):
    '''
       objective : to find the area of rectangle
       input parameters :
                    length of rectangle
                    breadth of rectangle
       return value: area of rectangle
    '''
    #approach: multiply length and breadth of rectangle
    area = length * breadth
    return area
def areasquare(side):
    '''
        objective : to find the area of square
       input parameters :
                    side of square
       return value: area of square    '''
     #approach: multiply side by side of square
    area = side * side
    return area
def areatriangle(base,height):
    '''
       objective : to find the area of triangle
       input parameters :
                    base of triangle
                    height of triangle
       return value: area of triangle
    '''
    #approach: multiply base and height of triangle
    area = (base * height)/2
    return area
